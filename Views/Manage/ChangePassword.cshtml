@model Connect.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<style>
    h2 {
        color: #022449;
    }
    .input {
        background-color: #55BDCA;
        color: #EAF7F8;
        padding: 1em;
        border-radius: 10px;
        border: 2px solid transparent;
        outline: none;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        font-size: 16px;
        line-height: 1.4;
        width: 400px;
        height: 20px;
        transition: all 0.2s;
    }

        .input:hover {
            cursor: pointer;
            background-color: #eee;
            border-color: #55BDCA;
            color: #55BDCA;
        }

        .input:focus {
            cursor: text;
            color: #022449;
            background-color: white;
            border-color: #022449;
        }

    .validation {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        font-size: 16px;
    }

    .label {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: bold;
        font-size: 16px;
        color: #022449;
    }
    .bg-plus {
        background-color: #F27D42;
        color: #EAF7F8;
    }

        .bg-plus:hover {
            background-color: #D46D3A;
            color: #EAF7F8;
        }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-2">
            <h2>Change Password</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 container">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>&nbsp;</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-3 control-label label" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "input" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-3 control-label label" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "input" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label label" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 col-md-offset-2">
                        <input type="submit" value="Change password" class="btn bg-plus btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    
}