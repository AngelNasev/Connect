@model Connect.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<style>
    h2,h4 {
        color: #022449;
    }
    .input {
        background-color: #55BDCA;
        color: #EAF7F8;
        padding: 1em;
        border-radius: 10px;
        border: 2px solid transparent;
        outline: none;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        font-size: 16px;
        line-height: 1.4;
        width: 400px;
        height: 20px;
        transition: all 0.2s;
    }

        .input:hover {
            cursor: pointer;
            background-color: #eee;
            border-color: #55BDCA;
            color: #55BDCA;
        }

        .input:focus {
            cursor: text;
            color: #022449;
            background-color: white;
            border-color: #022449;
        }

    .validation {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        font-size: 16px;
    }

    .label {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: bold;
        font-size: 16px;
        color: #022449;
    }

    .bg-plus {
        background-color: #F27D42;
        color: #EAF7F8;
    }

        .bg-plus:hover {
            background-color: #D46D3A;
            color: #EAF7F8;
        }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-2">
            <h2>Register User</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 container">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h4>Create a new account.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "input" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-md-3 control-label label" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "input" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label label" })
                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "input" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label label" })
                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn bg-plus btn-default" value="Register" />
                        </div>
                    </div>
            </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    
}
