@using Connect.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<style>
    h2, h4 {
        color: #022449;
    }

    .input {
        background-color: #55BDCA;
        color: #EAF7F8;
        padding: 1em;
        border-radius: 10px;
        border: 2px solid transparent;
        outline: none;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        font-size: 16px;
        line-height: 1.4;
        width: 400px;
        height: 20px;
        transition: all 0.2s;
    }

        .input:hover {
            cursor: pointer;
            background-color: #eee;
            border-color: #55BDCA;
            color: #55BDCA;
        }

        .input:focus {
            cursor: text;
            color: #022449;
            background-color: white;
            border-color: #022449;
        }

    .validation {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        font-size: 16px;
    }

    .label {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: bold;
        font-size: 16px;
        color: #022449;
    }
    .checkbox {
        color: #022449;
    }
    .bg-plus {
        background-color: #F27D42;
        color: #EAF7F8;
    }

        .bg-plus:hover {
            background-color: #D46D3A;
            color: #EAF7F8;
        }
    .reg a{
        color: #F27D42;
    }
        .reg a:hover {
            text-decoration: none;
            color: #022449;
        }
  
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <h2>Log in</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 container">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "input" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger validation" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label label" })
                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "input" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger validation" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn bg-plus btn-default" />
                        </div>
                    </div>
                    <p class="reg">
                        @Html.ActionLink("Register as a new user", "Register")
                    </p>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    
}